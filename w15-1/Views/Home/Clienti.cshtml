@using w15_1.Models 

<link href="~/Content/Cliente.css" rel="stylesheet" />



<div class="container">
    <div class="row">
        <div class="col-4">
            @foreach (Spedizioni s in Model)
            {   
                     <h2 class="text-center">Dettaglio spedizione</h2>
                <div class="border border-dark rounded-3 text-center bg-info m-3 p-4 ">
                    <p><strong scope="col">Numero identificativo spedizione: </strong>@s.IdSpedizione</p>

                    <p><strong scope="col">Mittente: </strong>@s.NomeCliente</p>

                    <p> <strong scope="col">Data spedizione: </strong>@s.DataS</p>

                    <p> <strong scope="col">Data presunta consegna: </strong>@s.DataC</p>

                    <p>  <strong scope="col">Peso: </strong>@s.Peso</p>

                    <p><strong scope="col">Città: </strong>@s.Città</p>

                    <p>   <strong scope="col">Indirizzo: </strong>@s.Indirizzo</p>

                    <p> <strong scope="col">Nominativo destinatario: </strong>@s.NominativoDestinatario</p>

                    <p> <strong scope="col">Costo spedizione: </strong> € @s.CostoSpedizione</p>


                </div>
                
                    
                }
            </div>
      
            <div class="col-8">
                <h2 class="text-center mb-3">Registro aggiornamenti</h2>
                <table class="table table-bordered border-dark bg-body ">
                    <thead>
                        <tr class="bg-primary">
                            <th scope="col">Stato Spedizione</th>
                            <th scope="col">Luogo</th>
                            <th scope="col">Descrizione</th>
                            <th scope="col">Data e ora</th>
                            <th scope="col">Numero identificativo spedizione</th>

                        </tr>
                    </thead> 
                    @foreach (w15_1.Models.Spedizioni s in w15_1.Models.Spedizioni.spedizioni)
                    {
                        <tbody>
                            <tr>
                                <td>@s.Nomestato</td>
                                <td>@s.Luogo</td>
                                <td>@s.Descrizione</td>
                                <td>@s.DataOraAggiornamento</td>
                                <td>@s.IdSpedizioni</td>
                            </tr>
                        </tbody>
                    }
                    </table>
            </div>
        </div>
</div>