@model w15_1.Models.Clienti
@{
    ViewBag.Title = "RegistraCliente";
}
<body>
    <link href="~/Content/Cliente.css" rel="stylesheet" />
    <h2 class="text-center">RegistraCliente</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="d-flex flex-column border border-dark border-3 text-white rounded-5 text-center mx-auto w-50 p-3 mt-4 " id="Form">
           
            <div class="form-group mx-auto">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "border border-dark rounded-2" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mx-auto">
                @Html.LabelFor(model => model.Indirizzo, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Indirizzo, new { htmlAttributes = new { @class = " border border-dark rounded-2" } })
                    @Html.ValidationMessageFor(model => model.Indirizzo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mx-auto">
                @Html.LabelFor(model => model.Città, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Città, new { htmlAttributes = new { @class = "border border-dark rounded-2" } })
                    @Html.ValidationMessageFor(model => model.Città, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mx-auto">
                @Html.LabelFor(model => model.IsAzienda, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    si @Html.CheckBoxFor(model => model.IsAzienda, new { htmlAttributes = new { @class = "border border-dark rounded-2" } })
                    no <input type="checkbox" id="Check" name="Check" value="" />
                    @Html.ValidationMessageFor(model => model.IsAzienda, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mx-auto" id="CF">

                @Html.LabelFor(model => model.CodiceFiscale, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CodiceFiscale, new { htmlAttributes = new { @class = "border border-dark rounded-2 CF" } })
                    @Html.ValidationMessageFor(model => model.CodiceFiscale, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mx-auto" id="PI">
                @Html.LabelFor(model => model.PartitaIva, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PartitaIva, new { htmlAttributes = new { @class = "border border-dark rounded-2 PI" } })
                    @Html.ValidationMessageFor(model => model.PartitaIva, "", new { @class = "text-danger" })
                </div>


            </div>

            <div class="form-group mx-auto">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</body>

@section scripts{

    <script type="text/javascript">
        $("#CF").hide()

      $(document).ready(function () {
          $("#Check").change(function () {
              if ($("#Check").is(':checked')) {
                  console.log("true");
                  $("#CF").show()
                  $("#PI").hide()
              } else {
                  console.log("false");
                  $("#CF").hide()
                  $("#PI").show()
              }
          })

      })
    </script>

}
