@using w15_1.Models
@{
    ViewBag.Title = "SelectAggiornamentowhereid";
}


<div class="container">
    <div class="row">
        <div class="col-4">
            @Html.Action("SelectDettagli")
        </div>
        <div class="col-8">
            <h2 class="text-center mb-3">Registro aggiornamenti</h2>
            <table class="table table-bordered border-dark bg-body ">
                <thead>
                    <tr class="bg-primary">
                        <th scope="col">Stato Spedizione</th>
                        <th scope="col">Luogo</th>
                        <th scope="col">Descrizione</th>
                        <th scope="col">Data e ora</th>
                        <th scope="col">Numero identificativo spedizione</th>

                    </tr>
                </thead>
                @foreach (Aggiornamenti s in Model)
                {
                    <tbody>
                        <tr>
                            <td>@s.Nomestato</td>
                            <td>@s.Luogo</td>
                            <td>@s.Descrizione</td>
                            <td>@s.DataOraAggiornamento</td>
                            <td>@s.IdSpedizioni</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>