@model w15_1.Models.Aggiornamenti
@{
    ViewBag.Title = "RegistraAggiornamenti";
}
<link href="~/Content/Cliente.css" rel="stylesheet" />
<h2 class="text-center">Registra un aggiornamento</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="Form" class="d-flex flex-column border border-dark border-3 text-white rounded-5  mx-auto w-50 p-3 mt-4">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mx-auto ">
            @Html.LabelFor(model => model.StatoSpedizione, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Stato", new SelectList(ViewBag.drop1, "Value", "text"));
                @Html.ValidationMessageFor(model => model.StatoSpedizione, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group mx-auto">
            @Html.LabelFor(model => model.Luogo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Luogo, new { htmlAttributes = new { @class = "mb-2" } })
                @Html.ValidationMessageFor(model => model.Luogo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group mx-auto">
            @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "mb-2" } })
                @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
            </div>
        </div>
